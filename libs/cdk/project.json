{
  "name": "cdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/cdk/src",
  "prefix": "angular-kit",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/cdk/ng-package.json",
        "updateBuildableProjectDepsInPackageJson": true
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/cdk/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/cdk/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/cdk/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/cdk/**/*.ts",
          "libs/cdk/**/*.html",
          "libs/cdk/coercing/**/*.ts",
          "libs/cdk/coercing/**/*.html",
          "libs/cdk/types/**/*.ts",
          "libs/cdk/types/**/*.html",
          "libs/cdk/memoize/**/*.ts",
          "libs/cdk/memoize/**/*.html",
          "libs/cdk/pipes/**/*.ts",
          "libs/cdk/pipes/**/*.html",
          "libs/cdk/supported/**/*.ts",
          "libs/cdk/supported/**/*.html",
          "libs/cdk/token/**/*.ts",
          "libs/cdk/token/**/*.html",
          "libs/cdk/lazy/**/*.ts",
          "libs/cdk/lazy/**/*.html",
          "libs/cdk/template/**/*.ts",
          "libs/cdk/template/**/*.html",
          "libs/cdk/rx-interop/**/*.ts",
          "libs/cdk/rx-interop/**/*.html"
        ]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "angular"
      }
    },
    "publish": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "npm publish dist/libs/cdk"
          }
        ]
      },
      "dependsOn": [
        {
          "target": "lint"
        },
        {
          "target": "test"
        },
        {
          "target": "version"
        },
        {
          "target": "build"
        }
      ]
    }
  },
  "tags": []
}
