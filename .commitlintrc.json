{
  "extends": ["@commitlint/config-angular"],
  "rules": {
    "subject-empty": [2, "never"],
    "scope-enum": [
      2,
      "always",
      [
        "demos",
        "docs",
        "stream",
        "cdk",
        "rx",
        "rx-stateful",
        "reactive-state",
        "rx-hooks",
        "ci",
        "immutable-helper",
        "effects"
      ]
    ],
    "type-empty": [2, "never"],
    "type-enum": [
      2,
      "always",
      ["fix", "feat", "docs", "refactor", "test", "chore", "ci", "perf", "build", "revert"]
    ]
  }
}
